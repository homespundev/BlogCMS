@model HomespunClassics.UI.Models.ContactViewModel
@{
    ViewBag.Title = "Contact";
}
    <div class="bg-faded p-4 my-4">

            <hr class="divider">
            <h2 class="text-center text-lg text-uppercase my-0">
                Contact
                <strong>Homespun Classics</strong>
            </h2>
            <hr class="divider">
            <div class="row">
                <div class="col-sm-12">
                    <div class="contact-form">
                        <div class="status alert alert-success" style="display: none"></div>
                        @*                    <form id="main-contact-form" class="contact-form row" name="contact-form" method="get" action="#" onsubmit="validateForm()">*@
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            <div class="row con1">
                                <div class="form-group col-md-6">
                                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                                    @Html.ValidationMessageFor(x => x.Name)
                                </div>
                                <div class="form-group col-md-6">
                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
                                    @Html.ValidationMessageFor(x => x.Email)

                                </div>
                            </div>
                            <div class="form-group col-md-12">
                                @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Subject" })
                                @Html.ValidationMessageFor(x => x.Subject)

                            </div>
                            <div class="form-group col-md-12">
                                @Html.TextAreaFor(x => x.Message, new { @class = "form-control", @placeholder = "Message", @id = "conMsg",
                           @style="min-height: 150px"})
                                @Html.ValidationMessageFor(x => x.Message)

                            </div>
                            <div class="form-group col-md-12">
                                <input type="submit" name="submit" class="btn btn-default pull-right"value="Submit">

                            </div>
                        }
                        @*</form>*@
                    </div>
                </div>
            </div>
    </div>
</div>
@section Scripts{
<script type="text/javascript">
        $(document).ready(function () {
            $("#conMsg").Editor({ 'source': false, 'textformats': false, 'block_quote': false,
                'print': false, 'splchars': false, 'togglescreen': false, 'ol': false, 'ul': false, 'strikeout': false,
                'rm_format': false, 'insert_table': false, 'styles': false, 'advancedoptions': false, 'status_bar': false
            });
        });
</script>
    }