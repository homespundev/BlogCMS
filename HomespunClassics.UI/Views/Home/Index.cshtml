@{
    ViewBag.Title = "Home";
}

    <div class="bg-faded p-4 my-4 h-75">
        <!-- Image Carousel -->
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img class="d-block img-fluid w-100" src="~/Content/Image/bluebowtie.png">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-shadow">Snap-On Bow Headband</h3>
                        <p class="text-shadow">with interchangeable snap on bows</p>
                        <button type="button" onclick="addToCart(1)" class="btn btn-default get">Get it now</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid w-100" src="~/Content/Image/doorjammer.png" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-shadow">Door Jammer</h3>
                        <p class="text-shadow">Keep your little one from slamming the door</p>
                        <button type="button" onclick="addToCart(2)" class="btn btn-default get">Get it now</button>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="d-block img-fluid w-100" src="~/Content/Image/cloud blanket.png" alt="">
                    <div class="carousel-caption d-none d-md-block">
                        <h3 class="text-shadow">"Cloud" Flannel Blanket</h3>
                        <p class="text-shadow">One side cozy flannel, the other cool cotton</p>
                        <p class="text-shadow">Custom embroidery available</p>
                        <button type="button" onclick="addToCart(3)" class="btn btn-default get">Get it now</button>

                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <!-- Welcome Message -->
        <div class="text-center mt-4">
            <div class="text-heading text-muted text-lg">Welcome To</div>
            <h1 class="my-2">The Shop</h1>
            <div class="text-heading text-muted text-lg">
                By
                <strong>Homespun Classics</strong>
            </div>
        </div>
    </div>
