@{
    ViewBag.Title = "DEMO purpose Email Link";
}
<div class="bg-faded p-4 my-4">
    <hr class="divider">
    <h2 class="text-center text-lg text-uppercase my-0">
        <strong>@ViewBag.Title</strong>
    </h2>
    <hr class="divider">
    <p class="text-info">
        Please check your email and confirm your email address.
    </p>
